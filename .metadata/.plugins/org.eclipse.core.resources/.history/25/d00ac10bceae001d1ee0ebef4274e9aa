			}else {
				
			}
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	public static void responseKeyValidationfromArray(Response response, String key) {
		try {
			JSONArray array = new JSONArray(response.getBody().asString());
			for(int i=0; i<array.length();i++) {
				JSONObject obj = array.getJSONObject(i);			
			}
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

}
